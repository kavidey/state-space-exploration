\DeclareOption{calc}{
    \newcommand{\lm}[2]{\displaystyle\lim_{#1\rightarrow#2}}
    \newcommand{\dd}[2]{%
        \ifthenelse{\equal{#1}{1}\or\isempty{#1}}{%
            \frac{d}{d#2}%
        }{%
            \frac{d^#1}{d#2}%
        }%
    }
    \newcommand{\ddd}[3]{%
        \ifthenelse{\equal{#1}{1}\or\isempty{#1}}{%
            \frac{d#2}{d#3}%
        }{%
            \frac{d^#1#2}{d#3}%
        }%
    }
    \newcommand{\pp}[2]{%
        \ifthenelse{\equal{#1}{1}\or\isempty{#1}}{%
            \frac{\partial}{\partial#2}%
        }{%
            \frac{\partial^{#1}}{\partial#2}%
        }%
    }
    \newcommand{\ppp}[3]{%
        \ifthenelse{\equal{#1}{1}\or\isempty{#1}}{%
            \frac{\partial#2}{\partial#3}%
        }{%
            \frac{\partial^{#1}#2}{\partial#3}%
        }%
    }
    \newcommand{\ddx}{\frac{d}{dx}}
    \newcommand{\ddy}{\frac{d}{dy}}
    \newcommand{\dydx}{\frac{dy}{dx}}
    \newcommand{\ddt}{\frac{d}{dt}}
    \newcommand{\ppx}{\frac{\partial}{\partial x}}
    \newcommand{\ppy}{\frac{\partial}{\partial y}}
    \newcommand{\ppz}{\frac{\partial}{\partial z}}
    \newcommand{\dfdx}{\frac{\partial f}{\partial x}}
